xterm*background: black
xterm*foreground: white

! start with TrueType fonts enabled
XTerm.vt100.renderFont: true

! XTerm.vt100.faceName: Terminus:size=14:antialias=true
XTerm.vt100.faceName: DejaVu Sans Mono:size=14:antialias=true

! keys to change font size
xterm*VT100.Translations: #override \
    Ctrl <Key> minus: smaller-vt-font() \n\
    Ctrl <Key> plus: larger-vt-font() \n\
    Ctrl <Key> 0: set-vt-font(d)
    Ctrl Shift <Key>V:      insert.selection(CLIPBOARD) \n\
    Ctrl Shift <Key>C:      copy-selection(CLIPBOARD)

! disable scrollbar
XTerm.vt100.scrollBar: false



! URXVT Terminal Configuration
! URxvt.background: #000000
URxvt.scrollBar: false
URxvt.foreground: #FFFFFF
URxvt.perl-ext-common: resize-font, matcher, clipboard
URxvt.visualBell: false

! cursor
URxvt.cursorColor: white
URxvt.cursorBlink: true

! text
URxvt.font: xft:Fira Code:style=Regular:size=14
URxvt.letterSpace: -1

! clipboard
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste

